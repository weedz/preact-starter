{
    "compilerOptions": {
      "allowJs": true,
      "module": "ESNext",
      "skipLibCheck": true,
      "strict": true,
      "jsx": "react-jsx",
      "jsxImportSource": "preact",
      "sourceMap": true,
      "baseUrl": ".",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
  }
